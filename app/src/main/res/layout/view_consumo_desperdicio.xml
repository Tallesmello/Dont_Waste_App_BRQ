<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_consumo"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_desperdicio"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:chipBackgroundColor="@color/colorGreenPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/chip_consumo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bola"
        app:layout_constraintStart_toStartOf="@id/chip_background"
        app:layout_constraintTop_toTopOf="@id/chip_background"
        app:layout_constraintBottom_toBottomOf="@id/chip_background"
        />

    <View
        android:id="@+id/chip_neutro"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bola"
        app:layout_constraintStart_toStartOf="@id/chip_background"
        app:layout_constraintEnd_toEndOf="@id/chip_background"
        app:layout_constraintTop_toTopOf="@id/chip_background"
        app:layout_constraintBottom_toBottomOf="@id/chip_background"
        />

    <View
        android:id="@+id/chip_desperdicio"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bola"
        app:layout_constraintEnd_toEndOf="@id/chip_background"
        app:layout_constraintTop_toTopOf="@id/chip_background"
        app:layout_constraintBottom_toBottomOf="@id/chip_background"
        />


</androidx.constraintlayout.widget.ConstraintLayout>