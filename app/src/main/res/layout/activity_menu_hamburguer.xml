<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuHamburguer"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/image_sair"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imagem_lixeira_hm_logada"
        android:layout_width="71dp"
        android:layout_height="69dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/logo_sem_fundo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_titulo_app"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="Don't Waste Organize"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagem_lixeira_hm_logada"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/text_cadastrar"
        android:background="@color/cinza_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_cadastrar"
        android:layout_width="376dp"
        android:layout_height="26dp"
        android:layout_marginTop="184dp"
        android:layout_marginStart="16dp"
        android:text="Cadastrar produtos                                             > "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_cadastrar"
        android:layout_marginTop="8dp"
        android:background="@color/cinza_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>