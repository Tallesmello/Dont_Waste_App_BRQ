<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nome_alimento_cadastrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="1"
        tools:text="MamÃ£o" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        >

    <TextView
        android:id="@+id/item_produtos_cadastrado_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        tools:text="22/11"
        />

    <ImageButton
        android:id="@+id/imageButton_remover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:src="@drawable/ic_sinal_de_menos"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/contador_item_frutas"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordar_costumizado"
        android:gravity="center"
        android:layout_margin="4dp"
        tools:text="@string/quantidade_item"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/imageButton_adicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_add" />

    <com.example.dont_waste_brq.custom_view.ConsumoDesperdicioCustomView
        android:id="@+id/cdview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        />

    </LinearLayout>

</LinearLayout>