<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeLogadaActivity">

    <!--    Botão Home não logada -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_voltar_homeNLogada_homeLogada"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/cadastro_1_icone_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Botão Search -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_search_hm_logada"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_menu_hm_logada"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Botão Menu hamburguer -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_menu_hm_logada"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_menu_hamburguer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Imagem fundo -->

    <ImageView
        android:id="@+id/imagem_marca_dagua_hm_logada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fundonovo"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--    Imagem lixeira -->

    <ImageView
        android:id="@+id/imagem_lixeira_hm_logada"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_sem_fundo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nome_app_hm_logada"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/dont_waste_hm_n_logada"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_lixeira_hm_logada"/>

    <!--    Text Organize -->

    <TextView
        android:id="@+id/text_organize_hm_logada"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="@string/organize_hm_n_logada"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_app_hm_logada"/>

    <!--    Text Sua despensa inteligente -->

    <TextView
        android:id="@+id/text_slogan_hm_logada"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/sua_despensa_inteligente_hm_n_logada"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/cor_texto"
        android:textSize="40sp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_organize_hm_logada"/>

    <!--    Botão Primeiro Acesso-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_vencimentos_proximos_homeLogada"
        android:layout_width="@dimen/dimensao_largura_buttons"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="Vencimentos Próximos"
        app:flow_verticalBias="0.0"
        android:textSize="12sp"
        android:backgroundTint="@color/cor_texto"
        android:fontFamily="@font/open_sans_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <!--    Botão Login -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_desperdicios_homeLogada"
        android:layout_width="@dimen/dimensao_largura_buttons"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/cor_texto"
        android:text="Desperdícios"
        app:flow_verticalBias="0.0"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>