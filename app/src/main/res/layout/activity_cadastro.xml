<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CadastroActivity">

    <!--    Bot達o Home n達o logada -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_volta_cadastro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="32dp"
        android:src="@drawable/cadastro_1_icone_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Imagem Usuario -->

    <ImageView
        android:id="@+id/imagem_user_cadastro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/cadastro_1_icone_usuario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_volta_cadastro" />

    <!--    Edit Email -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_email_cadastro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="16dp"
        android:hint="@string/email_btn_cadastro"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_user_cadastro">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--    Edit Senha -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_senha_cadastro"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/senha_btn_cadastro"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        app:errorIconDrawable="@null"
        app:counterEnabled="true"
        app:counterMaxLength="8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email_cadastro">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_senha_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:digits="123456789"
            android:inputType="numberPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  Bot達o Ajuda -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_ajuda_cadastro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/cadastro_1_icone_ajuda"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_senha_cadastro" />

    <!--    Bot達o Proximo -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_proximo_cadastro"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/proximo_btn_cadastro"
        android:backgroundTint="@color/cor_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>