<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DesperdiciosActivity">







    <ImageView
        android:id="@+id/imagem_marca_dagua_desperdicios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fundonovo"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--    Imagem lixeira -->

    <!--    Imagem Usuario -->
    <ImageView
        android:id="@+id/imagem_lixeira"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/logo_sem_fundo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--    Text Don't Waste -->
    <TextView
        android:id="@+id/text_nome_desperdicios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="DESPERDICIOS"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_lixeira"/>
    <!--    Text Organize -->
    <TextView
        android:id="@+id/text_desperdicios_construção"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="TELA EM CONSTRUÇÃO"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_desperdicios"/>

    <include
        android:id="@+id/toolbar_desperdicios"
        layout="@layout/appbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>